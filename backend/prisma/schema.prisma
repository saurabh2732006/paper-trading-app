// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  startingCash Decimal @default(100000)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
  positions   Position[]

  @@map("users")
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  symbol    String
  side      String   // "buy" | "sell"
  type      String   // "market" | "limit"
  qty       Decimal
  price     Decimal? // for limit orders
  status    String   // "open" | "filled" | "cancelled" | "partial"
  filledQty Decimal  @default(0)
  avgPrice  Decimal?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model Position {
  id       Int      @id @default(autoincrement())
  userId   Int
  symbol   String
  qty      Decimal
  avgPrice Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, symbol])
  @@map("positions")
}

model Price {
  id     Int      @id @default(autoincrement())
  symbol String
  ts     DateTime
  price  Decimal

  @@index([symbol, ts])
  @@map("prices")
}

